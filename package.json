{
  "name": "bird",
  "version": "0.1.0",
  "description": "CLI tool for tweeting and replying via Twitter/X GraphQL API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "bird": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "bird": "pnpm run build && node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "binary": "bun build --compile --minify src/index.ts --outfile bird",
    "graphql:update": "tsx scripts/update-query-ids.ts"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "devalue": "^5.5.0",
    "json5": "^2.2.3",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "4.0.15",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20"
  }
}
